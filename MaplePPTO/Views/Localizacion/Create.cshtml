@model MaplePPTO.ViewModels.LocalizacionViewModel


<h2 class="m-0">CREATE LOCATION</h2>
<div class="card">
    @*<div class="card-header">
            <h3 class="card-title">DataTable with default features</h3>
        </div>*@
    <!-- /.card-header -->
    <div class="card-body">
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <label class = "control-label col-md-2">State code</label>
                    <div class="col-md-10" >
                        @Html.EditorFor(model => model.coddpto, new { htmlAttributes = new { @class = "form-control", @required="required"} })
                        @Html.ValidationMessageFor(model => model.coddpto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <label class="control-label col-md-2">State</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.NomDpto, Model.selectListDepartamentos, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.NomDpto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Department ISO</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ISODpto, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.ISODpto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Municipality code</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CodMun, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.CodMun, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Municipality</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomMun, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.NomMun, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Country</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.id_pais, Model.selectListPaices, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.id_pais, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                    @Html.LabelFor(model => model.Operacion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.Operacion)
                            @Html.ValidationMessageFor(model => model.Operacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>*@


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
</div>
